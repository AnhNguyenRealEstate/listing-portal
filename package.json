{
  "name": "listing-portal",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build && cp src/index.html functions/lib/hosting/index.html",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build-prod": "ng build --configuration production --aot --outputHashing=all && cp dist/listing-portal/index.html functions/lib/hosting/index.html",
    "preview-live": "npm run build-prod && firebase hosting:channel:deploy",
    "deploy": "npm run build-prod && firebase deploy --only hosting",
    "build-docker": "docker build -t listing-portal:latest \".\" ",
    "start-docker": "docker run -dp 3000:80 --name listing-portal -t listing-portal:latest",
    "start-db": "firebase emulators:start --import=./offline-db --export-on-exit",
    "clean-db": "lsof -t -i:9199 -i:8080 -i:9099 -i:5001 -i:9000 -i:5050 -i:8085 -i:4000 | xargs kill -9"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.3.0",
    "@angular/cdk": "^13.3.1",
    "@angular/common": "~13.3.0",
    "@angular/compiler": "~13.3.0",
    "@angular/core": "~13.3.1",
    "@angular/fire": "^7.3.0",
    "@angular/forms": "~13.3.0",
    "@angular/google-maps": "^13.3.2",
    "@angular/material": "^13.3.2",
    "@angular/platform-browser": "~13.3.1",
    "@angular/platform-browser-dynamic": "~13.3.1",
    "@angular/router": "~13.3.0",
    "@ng-idle/core": "*",
    "@ng-idle/keepalive": "*",
    "@ngx-translate/core": "^14.0.0",
    "@ngx-translate/http-loader": "^7.0.0",
    "@tinymce/tinymce-angular": "^5.0.1",
    "bootstrap": "^5.0.1",
    "jquery": "^3.6.0",
    "merge-images": "^2.0.0",
    "ngx-image-compress": "^13.1.9",
    "ngx-mask": "^13.1.4",
    "ngx-translate": "github:ngx-translate/core",
    "ngx-trim-directive": "^2.0.0",
    "ngx-useful-swiper": "^10.0.1",
    "placeholder-loading": "^0.5.0",
    "rxjs": "~7.5.5",
    "swiper": "^6.8.4",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.0",
    "@angular/cli": "~13.3.1",
    "@angular/compiler-cli": "~13.3.1",
    "@angular/localize": "^13.3.1",
    "@ng-bootstrap/ng-bootstrap": "^12.0.1",
    "@types/googlemaps": "^3.43.3",
    "@types/jasmine": "~4.0.0",
    "@types/merge-images": "^1.2.1",
    "@types/node": "^17.0.23",
    "angular-cli-ghpages": "*",
    "codelyzer": "^6.0.0",
    "jasmine-core": "4.0.1",
    "jasmine-spec-reporter": "7.0.0",
    "karma": "~6.3.15",
    "karma-chrome-launcher": "~3.1.1",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~4.0.2",
    "karma-jasmine-html-reporter": "^1.7.0",
    "ng-image-slider": "^2.8.0",
    "ngx-page-scroll-core": "^8.0.0",
    "protractor": "~7.0.0",
    "ts-node": "~10.7.0",
    "tslint": "~6.1.0",
    "typescript": "~4.6.3"
  }
}
